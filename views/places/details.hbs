<div class="container">

    <h1 class="placeHeader mr-auto p-2">{{name}}<span id="prueba">.</span></h1>
</div>
<section class="mt-5">
    <div class="container">
        <div class="row align-middle">
            <div class="col  ">

                <div>
                    <img class="placeImg"
                        src="https://res.cloudinary.com/dn3hqbxwn/image/upload/v1669317062/locationIcon_Mesa_de_trabajo_1_zwndcj.png"
                        alt="{{title}}">
                    <h2 class="d-flex align-items-center">Country, City</h2>
                </div>
            </div>
            <div class="col d-flex align-items-center">
                <h3> Coordinates:{{location.coordinates}} </h3>
            </div>
        </div>
    </div>
</section>
<div>
    <img class="placeDetailsImg mt-5" src="{{placeImg}}" alt="{{title}}">
</div>

<div class="container mt-5">
    <h3>Creators Description:</h3>
    <p class="detailsPar items-align center"> {{description}} </p>

    {{#unless isFav}}
    <form action="/user/{{../user}}/fav-places/{{_id}}" method="POST">
        <input type="submit" value="Save Place" class="btn btn-info">
    </form>
    {{/unless}}
    {{#if isFav}}
    <form action="/user/{{../user}}/fav-places/{{_id}}" method="POST">
        <input type="submit" value="Saved" class="btn btn-info">
    </form>
    {{/if}}
</div>

<section>
    <div class="container mt-5">

        <h2>What others think! ★ ★ ★ ★ ★</h2>
        <h5>Community Comments:</h5>
        {{#each comment}}
        <p>{{owner.username}}</p>
        <p>{{description}} </p>

        <ul>
            {{owner.username}}
            {{description}}
        </ul>

        {{/each}}
    </div>
    </div>
</section>


{{!-- Comments --}}
<div class="container mt-5">

    <h5>Have you been in {{name}}? Share what you think!:</h5>
    <div class="row">
        <div class="col-md-6 col-sm-offset-3">
            <form action="/comment/new-comment/{{id}}" method="post">
                <textarea class='formComment form-control' name="description" placeholder="Add a Comment"></textarea>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Add Comment</button>
                </div>
            </form>
        </div>
    </div>


</div>


<div>
    <a href="/places/edit/{{id}}" class="btn btn-dark">Edit Place</a>
</div>
</div>
<form action="/places/delete/{{id}}" method="POST">
    <input type="submit" value="Delete" class="btn btn-danger">
</form>



<link rel="/stylesheets/style.css" href="https://i.icomoon.io/public/temp/45f43a739b/UntitledProject/style.css">

</div>