<div class="profilecat container mt-5">
    <div class="row">
        <div class="description col mt-5">
            <h1 class="profileTitles"> {{nomad.username}} <span id="prueba">.</span></h1>
            <div>
                <p class="alignedPar">{{nomad.bio}}</p>
            </div>

            <div class="container">
                <h4 class="text-left fs-3 fw-bold mt-5">Currently in</h2>
            </div>

            <div class="container">
                <div class="row">

                    <img class="icon"
                        src="https://res.cloudinary.com/dn3hqbxwn/image/upload/v1669317062/locationIcon_Mesa_de_trabajo_1_zwndcj.png"
                        alt="{{title}}">
                    <h4 class="text-left fs-3 fw-bold mt-5">{{nomad.country}},{{nomad.city}}</h2>
                </div>

            </div>
        </div>
        <div class="col d-flex justify-content-center">
            <img class="profilePic" src="{{nomad.profileImg}}" alt="{{title}}">
        </div>

    </div>
</div>
<section> </section>


<div class="container mt-5">
    <div class="row mt-80">
        <h4 class="text-left fs-1 fw-bold mt-5 mb-5">Followers</h2>
            <div class="imageCarrousel">
                {{#each nomad.friends}}
                <div class="col">
                    <div>
                        <img class="friendPic" src="{{profileImg}}" alt="{{title}}">
                    </div>
                    <div>
                        <h1 class='text-left fs-3 fw-bold mt-5'>{{username}}</h1>
                    </div>
                </div>
                {{/each}}
            </div>
    </div>
    <a href="/user/{{id}}/friend-list" class="btn btn-dark">All Followers</a>


    <div class="container mt-5">
        <h1 class="pplacesHeader text-center fs-12 fw-bold mt-5 mb-5"> Places.<span id="prueba">.</span>. </h1>
    </div>

    <section Places>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4 class="profileText1 text-left fs-1 fw-bold mt-5">Created</h2>
                </div>
                <div class="col">
                    <h4 class="profileText2 text-right fs-1 fw-bold mt-5"><a
                            href="/user/profile/{{nomad._id}}">Saved</a>
                        </h2>
                </div>
            </div>
        </div>

</div>
</section>
